/* pages/note/note.wxss */
.todo-list {
  width: 100%;
}
.top {
  background: #66ccff;
  padding: 12px 12px 12px 12px;
  align-items: flex-start;
}
.bottom{
  padding: 16px 6px 16px 12px;
  align-items: center;
}
.title{
  color:white;
  flex: 1;
  margin-right: 10px;
  word-wrap: break-word;
}
.date{
  color:white;
}
.content{
  color:#66ccff;
  flex: 5;
  margin-right: 10px;
  text-overflow: ellipsis;
  line-height: 50rpx;
  word-wrap: break-word;
}
.folder{
  color:white;
  background: #66ccff;
  padding: 4px 6px 4px 6px;
  flex: 2;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
  -webkit-line-clamp:2;
}
.note-list{
  width: 100%;
  display: flex;
  flex-direction: column;
}