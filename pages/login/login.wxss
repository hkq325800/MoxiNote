.container {
  padding: 4px 12px;
}
.form-wrap {
  /* border-top: 1px solid #eee; */
  margin: 12px 0;
}
.flex-wrap{
  display: flex;
  flex-direction: row;
}
.input-wrap {
  display: flex;
  background: #fff;
  border-bottom: 1px solid #eee;
  margin: 0 -12px;
  padding: 0 12px;
  height: 46px;
  line-height: 46px;
}
.label {
  color: #999;
  width:6em;
}
.account-info-input {
  font-size: 18px;
  line-height: 100%;
  height: 100%;
  width: 100%;
}
.hint,
.error{
  display: block;
  margin: 8px 0;
  color: #888;
  font-size: 14px;
}
.error {
  color: #e64240;
}
.btn{
  margin-top: 10px;
  margin-right: 8px;
}